{
  "name": "vite-typescript-ssr-react",
  "version": "1.0.0",
  "description": "Boilerplate for a modern web stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonluca/vite-typescript-ssr-react"
  },
  "author": "Laishuxin",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch server.ts --watch src/server --exec \"yarn ts-node server.ts\"",
    "dev:server": "cross-env PORT=7891 node ./api-server/app.js",
    "dev:mock-server": "json-server ./__json_server__/db.json --watch --port 7891",
    "build": "tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "serve": "yarn build && cross-env NODE_ENV=production node --experimental-modules dist/server.js",
    "clean": "rimraf dist/",
    "prettier": "prettier --write .",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@types/react-helmet": "^6.1.4",
    "@types/styled-components": "^5.1.15",
    "@types/swiper": "^4.4.12",
    "autoprefixer": "^10.3.1",
    "axios": "^0.24.0",
    "better-scroll": "^2.4.2",
    "classnames": "^2.3.1",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "express": "4.17.1",
    "express-http-proxy": "^1.6.2",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.2.5",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-simple-img": "^3.0.0",
    "redux-promise": "^0.6.0",
    "serve-static": "^1.14.1",
    "styled-components": "^5.3.3",
    "swiper": "4.5.1",
    "ts-node": "^10.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/compression": "1.7.1",
    "@types/concurrently": "6.2.1",
    "@types/eslint": "7.28.0",
    "@types/express-http-proxy": "^1.6.3",
    "@types/jest": "^27.0.2",
    "@types/node": "16.4.2",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-config": "^5.0.3",
    "@types/react-router-dom": "^5.1.8",
    "@types/redux-promise": "^0.5.29",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "concurrently": "6.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": ">=6",
    "jest": "^27.3.1",
    "json-server": "^0.17.0",
    "lint-staged": ">=10",
    "nock": "^13.2.1",
    "nodemon": "^2.0.12",
    "postcss": "8.3.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "2.2.7",
    "ts-jest": "^27.0.7",
    "typescript": "4.3.5",
    "vite": "2.4.3",
    "vite-plugin-legacy": "^2.1.0",
    "vite-plugin-svgr": "^0.4.0"
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx,js,jsx}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
